{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "redirects": [
      {
        "source": "/animate{,/**}",
        "destination": "/animate/index.html"
      },
      {
        "source": "**",
        "destination": "/front/index.html"
      }
    ]
  }
}
